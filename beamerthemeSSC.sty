%==============================================================================
% build the poster title
%==============================================================================
\setbeamertemplate{headline}{
	\leavevmode
	\begin{columns}
		\begin{column}{0.15\linewidth}
			\begin{center}
				\includegraphics[width=0.75\linewidth]{logo}
			\end{center}
		\end{column}
		\begin{column}{.7\linewidth}
			\vskip2cm
			\centering
			%\usebeamercolor{title in headline}
			{\color{colorSection} \textbf{\huge{\inserttitle}}\\[1ex]}
			\vskip 1.5cm
			%\usebeamercolor{author in headline}
			{\color{fg} \Large{\insertauthor}\\[1ex]}
			%\usebeamercolor{institute in headline}
			{\color{fg} \large{\insertinstitute}\\[1ex]}
			\vskip2cm
		\end{column}
		\begin{column}{.15\linewidth}
			\begin{center}
			\includegraphics[width=0.75\linewidth]{logo2}
			\end{center}
		\end{column}
		\vspace{1cm}
	\end{columns}
	%%% additional bar under titles
	%\begin{beamercolorbox}[colsep=0.5cm]{colorbar}
	%\end{beamercolorbox}
}


%==============================================================================
% build the poster foot
%==============================================================================
\setbeamertemplate{footline}{
	\leavevmode
	\vskip2cm
	\begin{center}
		\begin{minipage}[c][3cm][c]{0.95\textwidth}
			\begin{center}
				%
				\begin{flushleft}
					\vskip-1cm
					\begin{tikzpicture}[
						remember picture,overlay,
						%background rectangle/.style={fill=colorBackground},show background rectangle
						]
						\shade [inner color=colorSection,outer color=colorBackground] (0,0) rectangle (\textwidth,0.3cm);
					\end{tikzpicture}
				\end{flushleft}
				%
				\vskip1cm
				\centering
				%\usebeamercolor{title in headline}
				{\color{fg} \textbf{\large{\insertshorttitle}}}
				%
			\end{center}
		\end{minipage}
	\end{center}
	\vskip1cm
}


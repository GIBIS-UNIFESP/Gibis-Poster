%==============================================================================
% Section and subsection re-definitions

\renewcommand{\section}[1]{
	\par\vskip\medskipamount%
	%
	\begin{flushleft}
		\begin{tikzpicture}[remember picture,overlay]
			\shade [inner color=colorSection,outer color=colorBackground] (0,0) rectangle (\columnwidth,0.3cm);
		\end{tikzpicture}
	\end{flushleft}
	%
	\begin{center}
		%\vskip1cm
		{\textcolor{colorSection}{\textbf{\Large #1}}}
		{\parskip0pt\par}
	\end{center}
	%
	\begin{flushleft}
		\vskip-0.5cm
		\begin{tikzpicture}[remember picture,overlay]
			\shade [inner color=colorSection,outer color=colorBackground] (0,0) rectangle (\columnwidth,0.3cm);
		\end{tikzpicture}
	\end{flushleft}
	%
	{\parskip0pt\par}
	\justifying
}

%%%
\renewcommand{\subsection}[1]{
\par\vskip\medskipamount%
     \begin{center}
	     \vskip0.8cm
	     {\textcolor{colorTitle}{\textbf{\textsl{\large #1}}}}
	     {\parskip0pt\par}
     \end{center}
%
  \justifying
}

